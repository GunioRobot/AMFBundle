<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="amf.kernel.class">Tecbot\AMFBundle\Amf\AmfKernel</parameter>
        <parameter key="amf.service_resolver.class">Tecbot\AMFBundle\Amf\Service\ServiceResolver</parameter>
        <parameter key="amf.service_name_parser.class">Tecbot\AMFBundle\Amf\Service\ServiceNameParser</parameter>
        
        <parameter key="amf.services" type="collection"></parameter>
        <parameter key="amf.mapping" type="collection"></parameter>
    </parameters>

    <services>

        <service id="amf.service_name_parser" class="%amf.service_name_parser.class%" public="false">
            <argument type="service" id="kernel" />
            <argument type="service" id="logger" on-invalid="ignore" />
        </service>

        <service id="amf.service_resolver" class="%amf.service_resolver.class%" public="false">
            <argument type="service" id="service_container" />
            <argument type="service" id="amf.service_name_parser" />
            <argument>%amf.services%</argument>
            <argument type="service" id="logger" on-invalid="ignore" />
        </service>
        
        <service id="amf.kernel" class="%amf.kernel.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="amf.service_resolver" />
            <argument>%kernel.debug%</argument>
            <argument>%amf.mapping%</argument>
        </service>
        
    </services>

</container>