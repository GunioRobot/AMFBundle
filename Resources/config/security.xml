<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="amf.security.matcher.class">Tecbot\AMFBundle\Amf\RequestMatcher</parameter>
    </parameters>

    <services>
        
        <service id="amf.security.firewall" class="%security.firewall.class%">
            <tag name="kernel.listener" event="amf.request" method="handle" priority="-128" />
            <argument type="service" id="amf.security.firewall.map" />
            <argument type="service" id="event_dispatcher" />
        </service>
        
        <service id="amf.security.firewall.map" class="%security.firewall.map.class%" public="false">
            <argument type="service" id="service_container" />
            <argument type="collection" />
        </service>
        
    </services>

</container>